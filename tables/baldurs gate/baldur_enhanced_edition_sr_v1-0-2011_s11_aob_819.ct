//LUDO+001d8992:
// mov ecx,[esi+000043F8]
// db 8b 8e f8 43 00 00
//LUDO+000ed89a:
p_MonGold:
// mov eax,[eax+0000427C]
 db 8b 80 7c 42 00 00

//=========================================
// Unregistering Symbols
unregistersymbol(MyCode)
unregistersymbol(pUnit)
