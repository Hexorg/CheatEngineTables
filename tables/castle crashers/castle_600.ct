jmp DamageRet

RegularCode:
movss xmm0,[edx+8]
jmp DamageRet

DoDamageAmount:
dd (float)777

castle.exe+3e6f0:
jmp DamageHack
DamageRet:

[disable]

castle.exe+3e6f0:
movss xmm0,[edx+8]

dealloc(DamageHack)
unregistersymbol(DoDamageAmount)
</AssemblerScript>
